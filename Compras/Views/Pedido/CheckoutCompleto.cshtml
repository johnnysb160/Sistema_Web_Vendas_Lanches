@model Pedido

<br />
<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
        <div class="card">
            <div class="card-body">
                <p>Cliente: <strong> @Model.Nome</strong></p>
                <p>Número do Pedido: <strong> @Model.PedidoId</strong></p>
                <p>Data do Pedido: <strong> @Model.PedidoEnviado.ToShortDateString()</strong> ás <strong> @Model.PedidoEnviado.ToShortTimeString()</strong></p>
                <br />
                <br />
                @{
                    var cont = 0;
                    foreach (var item in Model.PedidoItens)
                    {
                        cont++;
                        <img src="@item.Lanche.ImagemUrl" width="210" />
                        <p>
                            @cont.ToString()º item do pedido: <strong>@item.Lanche.Nome</strong><br />
                            Quantidade de itens: <strong>@item.Quantidade</strong><br />
                            Preço: <strong>@item.Lanche.Preco</strong>
                        </p>
                        <br />
                    }
                }
                <br />
                <p>Valor Total do pedido: <strong> @ViewBag.TotalPedido</strong></p>
            </div>
        </div>
    </div>
</div>
