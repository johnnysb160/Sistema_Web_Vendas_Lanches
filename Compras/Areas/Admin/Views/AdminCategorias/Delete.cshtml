    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Deseja apagar essa categoria?</h3>
<div>
    <h4>Categorias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
